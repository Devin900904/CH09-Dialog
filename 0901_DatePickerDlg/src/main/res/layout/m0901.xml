<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:padding="@dimen/Margins">

    <Button
        android:id="@+id/m0901_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0901_b001"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/m0901_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0901_b002"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/m0901_b001"
        app:layout_constraintTop_toBottomOf="@+id/m0901_b001" />

    <TextView
        android:id="@+id/m0901_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/m0901_t001"
        android:textColor="@color/Aqua"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m0901_b002" />
</androidx.constraintlayout.widget.ConstraintLayout>